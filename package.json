{
  "name": "xtrmaddons-soft-suite-conf",
  "version": "1.0.0",
  "description": "This package contains the configuration system used by the XtrmAddons applications in NodeJs.",
  "main": "out/index.js",
  "scripts": {
    "build:ts-compile": "tsc -p ./",
    "build:ts-docs": "./node_modules/.bin/typedoc --out dist/docs --mode modules ./src",
    "build:ts-lint": "eslint src/index.ts --fix",
    "test": "cross-env NODE_ENV=test NODE_DEBUG=trace host=192.168.1.23 nodemon --watch ./out --exec mocha  test/**/*.ts",
    "test:dev": "cross-env NODE_ENV=development protocol=https nodemon --watch ./out --exec mocha  test/**/*.ts",
    "test:dev-arg": "cross-env NODE_ENV=development NODE_DEBUG=trace host=192.168.1.123 port=741258 protocol=https nodemon --watch ./out --exec mocha  test/**/*.ts",
    "test:prod": "cross-env NODE_DEBUG=trace nodemon --watch ./out --exec mocha test/**/*.ts"
  },
  "keywords": [
    "xtrmaddons",
    "configuration"
  ],
  "author": "shim-sao <contact@xtrmaddons.com> (http://www.xtrmaddons.com/)",
  "license": "MIT",
  "homepage": "https://github.com/shim-sao/xtrmaddons-soft-suite-conf",
  "bugs": {
    "url": "https://github.com/shim-sao/xtrmaddons-soft-suite-conf/issues",
    "email": "error@xtrmaddons.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shim-sao/xtrmaddons-soft-suite-conf.git"
  },
  "dependencies": {
    "argv": "0.0.2",
    "cross-env": "^5.2.0",
    "docdash": "^1.1.0",
    "dotenv": "^6.2.0",
    "module-alias": "^2.2.0",
    "nconf": "^0.10.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.3.0",
    "xtrmaddons-node-fs-utils": "github:shim-sao/xtrmaddons-node-fs-utils",
    "xtrmaddons-soft-suite-logger": "github:shim-sao/xtrmaddons-soft-suite-logger"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/plugin-proposal-private-methods": "^7.4.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/types": "^7.5.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.15",
    "@types/mocha": "^5.2.7",
    "@types/nconf": "^0.10.0",
    "@types/node": "^12.0.12",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-eslint": "^11.0.0-beta.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-private-properties": "^1.0.2",
    "better-docs": "^1.1.6",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-node": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.15.3",
    "eslint-plugin-babel": "^5.3.0",
    "ink-docstrap": "^1.3.2",
    "install": "^0.12.2",
    "jsdoc-mermaid": "^1.0.0",
    "jsdoc-plugin-typescript": "^2.0.1",
    "minami": "^1.2.3",
    "npm": "^6.10.0",
    "path": "^0.12.7",
    "regenerator-runtime": "^0.13.2",
    "standard": "^12.0.1",
    "typedoc": "^0.14.2"
  },
  "_moduleAliases": {
    "@src": "src",
    "@out": "out"
  },
  "nodemonConfig": {
    "ignore": [
      "config/*",
      "docs/*",
      "data/*",
      "logs/*",
      "*.json",
      "*.db3",
      "*.db3-shm",
      "*.db3-wal"
    ],
    "delay": "2500"
  }
}
